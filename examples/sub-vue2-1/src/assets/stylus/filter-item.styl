@import './varsty'
/*自定义筛选条件模板样式*/
.fx-filter-item-template {
	&__select {
		width: 220px
		height: 28px
		line-height: 28px
		border-radius: 2px
		display: flex
		font-size: 12px
		&-label {
			width: 70px
			text-align: right;
			color: #606266;
			padding: 0 12px 0 0;
			box-sizing: border-box;
		}
		&-input {
			flex: 1
			border-radius: 4px;
			border: 1px solid #DCDFE6;
			box-sizing: border-box;
			color: #ccc;
			padding: 0 15px;
			position: relative
			.arrow-icon {
				width: 10px !important;
				height: 10px !important;
				position: absolute;
				right: 8px;
				top: 8px;
			}
			.item-tag-disabe-message {
				height: 12px;
    			line-height: 12px;
				color: $fxRed
				position: absolute
				bottom: -14px;
    			left: -12px;
				font-size: 10px
				transform: scale(0.8)
			}
		}
		&.is-hover {
			cursor: move
			.fx-filter-item-template__select-label {
				color: $fxBlue !important
			}
			.fx-filter-item-template__select-input {
				border: 1px dashed $fxBlue !important
				color: $fxBlue !important
			}
		}
		&.is-disable {
			&.is-hover {
				cursor: not-allowed
				.fx-filter-item-template__select-label {
					color: $fxRed !important
				}
				.fx-filter-item-template__select-input {
					border: 1px dashed $fxRed !important
					color: $fxRed !important
				}
			}
		}
	}
	&__input {
		width: 220px
		height: 28px
		line-height: 28px
		border-radius: 2px
		display: flex
		font-size: 12px
		&-label {
			width: 70px
			text-align: right;
			color: #606266;
			padding: 0 12px 0 0;
			box-sizing: border-box;
		}
		&-input {
			flex: 1
			border-radius: 4px;
			border: 1px solid #DCDFE6;
			box-sizing: border-box;
			color: #ccc;
			padding: 0 15px;
			position: relative
			.item-tag-disabe-message {
				height: 12px;
    			line-height: 12px;
				color: $fxRed
				position: absolute
				bottom: -14px;
    			left: -12px;
				font-size: 10px
				transform: scale(0.8)
			}
		}
		&.is-hover {
			cursor: move
			.fx-filter-item-template__input-label {
				color: $fxBlue !important
			}
			.fx-filter-item-template__input-input {
				border: 1px dashed $fxBlue !important
				color: $fxBlue !important
			}
		}
		&.is-disable {
			&.is-hover {
				cursor: not-allowed
				.fx-filter-item-template__input-label {
					color: $fxRed !important
				}
				.fx-filter-item-template__input-input {
					border: 1px dashed $fxRed !important
					color: $fxRed !important
				}
			}
		}
	}
	&__date-range {
		width: 450px
		height: 28px
		line-height: 28px
		border-radius: 2px
		display: flex
		font-size: 12px
		&-label {
			width: 70px
			text-align: right;
			color: #606266;
			padding: 0 12px 0 0;
			box-sizing: border-box;
		}
		&-input {
			flex: 1
			border-radius: 4px;
			border: 1px solid #DCDFE6;
			box-sizing: border-box;
			color: #ccc;
			padding: 0 15px;
			position: relative
			.date-icon {
				position: absolute;
				left: 8px;
				top: 7px;
				width: 14px
				height: 14px
			}
			.text-span {
				position: absolute;
				right: 200px;
				top: 0px;
			}
			.item-tag-disabe-message {
				height: 12px;
    			line-height: 12px;
				color: $fxRed
				position: absolute
				bottom: -14px;
    			left: -12px;
